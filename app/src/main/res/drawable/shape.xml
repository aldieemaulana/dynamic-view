<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_enabled="true">
        <shape android:shape="rectangle" >
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp"/>
            <corners android:radius="4dp"/>
            <solid android:color="#ea3f3f" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle" >
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp"/>
            <corners android:radius="4dp"/>
            <solid android:color="#b11a1a" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_enabled="false">
        <shape android:shape="rectangle" >
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp"/>
            <corners android:radius="4dp"/>
            <solid android:color="#9f9f9f" />
        </shape>
    </item>

</selector>